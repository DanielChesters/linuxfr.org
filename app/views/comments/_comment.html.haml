%h3
  = link_to "[^]", "#comment-#{comment.parent_id}", :title => "Aller au commentaire parent" unless comment.root?
  = ' '
  = link_to comment.title, [comment.node, comment]
%p.meta
  = posted_by(comment)
  Évalué à
  %span.score= comment.score
%figure.image
  = avatar_url(comment.user)
.content
  - if comment.deleted?
    %em Ce commentaire a été supprimé par l'équipe de modération.
  - else
    = sanitize comment.body
%footer.actions
  = link_to "Répondre", "/nodes/#{comment.node_id}/comments/#{comment.id}/answer", :class => 'action'
  - if current_user && current_user.can_vote?(comment)
    %div.vote
      Ce commentaire est-il #{button_to "pertinent", "/nodes/#{comment.node_id}/comments/#{comment.id}/relevance/for", :remote => true}
      ou #{button_to "inutile", "/nodes/#{comment.node_id}/comments/#{comment.id}/relevance/against", :remote => true} ?
