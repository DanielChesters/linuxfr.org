= form_for((@account || Account.new), :url => '/compte/connexion') do |f|
  %p
    = f.label :login, "Identifiant"
    = f.text_field :login, :required => "required"
  %p
    = f.label :password, "Mot de passe"
    = f.password_field :password, :required => "required"
  %p
    = f.check_box :remember_me
    = f.label :remember_me, "Connexion automatique"
  %p
    = f.submit "Se connecter"
